<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_materias"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/rl_card"
        android:background="@drawable/shape_for_materias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_materia"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_photo_camera_white_24dp"
            android:padding="10dp"
            android:background="@drawable/shape_card_expenditure"
            android:backgroundTint="@color/colorPrimary"
            app:civ_border_color="@color/transparent"
            app:civ_border_width="2dp" />
        <!--ImageView
            android:id="@+id/img_materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp" /-->

        <TextView
            android:id="@+id/txt_materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/img_materia"
            android:text="Compra de equipamentos de som"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txt_materia"
            android:background="@color/textColor" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>